<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:components="views.components.*">
	<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			[Bindable]
			public var dataProvider:ArrayCollection;
			
			private function doLeftButtonClick(event:Event):void {
				if (tlThumbnails.selectedIndex <= 0) {
					// The first image or no image is selected
					tlThumbnails.selectedIndex = (tlThumbnails.numChildren);
				} else {
					tlThumbnails.selectedIndex--;
				}
			}
			
			private function doRightButtonClick(event:Event):void {
				if ((tlThumbnails.selectedIndex >= (tlThumbnails.numChildren - 1)) || 
				    (tlThumbnails.selectedIndex == -1)) {
					// The last image or no image is selected
					tlThumbnails.selectedIndex = 0;
				} else {
					tlThumbnails.selectedIndex++;
				}
			}
			
		]]>
	</mx:Script>
	<mx:TileList id="tlThumbnails" dataProvider="{dataProvider}" selectedIndex="0" width="100%" height="100">
		<mx:itemRenderer>
			<mx:Component>
				<components:SmoothImage source="{data}"/>
			</mx:Component>
		</mx:itemRenderer>	
	</mx:TileList>
	<mx:HBox verticalAlign="middle" width="100%" height="100%">
		<mx:Spacer width="40" />
		<mx:Button id="leftbutton" icon="@Embed(source='images/left_arrow.png')" paddingBottom="20" paddingLeft="20" paddingTop="20" paddingRight="20" click="doLeftButtonClick(event)" />
		<mx:Spacer width="50%" />
		<components:SmoothImage source="{tlThumbnails.selectedItem}" height="100%" />
		<mx:Spacer width="50%" />
		<mx:Button id="rightbutton" icon="@Embed(source='images/right_arrow.png')" paddingBottom="20" paddingLeft="20" paddingTop="20" paddingRight="20" click="doRightButtonClick(event)" />
		<mx:Spacer width="40" />		
	</mx:HBox>
</mx:VBox>
